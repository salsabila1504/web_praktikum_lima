<script type="text/javascript">	function kurs() { 		
    let k = document.getElementById("kurs").value; 		
    if (k == 1) {			
        input = document.getElementById("nilai").value;			
        nilai = 9915;			
        hitung = nilai * input;			
        document.getElementById("rupiah").value = hitung;		
        }
    else if (k == 2) {			
        input = document.getElementById("nilai").value;			
        nilai = 13472;			
        hitung = nilai * input;			
        document.getElementById("rupiah").value = hitung;		
        }
    else if (k == 3) {			
        input = document.getElementById("nilai").value;			
        nilai = 874;			
        hitung = nilai * input;			
        document.getElementById("rupiah").value = hitung;		
        }
    else if (k == 4) {			
        input = document.getElementById("nilai").value;			
        nilai = 120;			
        hitung = nilai * input;			
        document.getElementById("rupiah").value = hitung; 
        }
    else if (k == 5) {			
        input = document.getElementById("nilai").value;			
        nilai = 15888;			
        hitung = nilai * input;			
        document.getElementById("rupiah").value = hitung;		
        }
    else if (k == 6) {			
        input = document.getElementById("nilai").value;			
        nilai = 3592;			
        hitung = nilai * input;			
        document.getElementById("rupiah").value = hitung;   }	
    }
</script>

